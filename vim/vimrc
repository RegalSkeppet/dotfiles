call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

set nocompatible

syntax enable
set encoding=utf-8
set number
set showcmd
set undofile

filetype plugin indent on

"" Whitespace
set nowrap
set tabstop=2 shiftwidth=2
set expandtab
set backspace=indent,eol,start

"" Searching
set hlsearch
set incsearch
set ignorecase
set smartcase

"" Unmap arrows
noremap <Left>  <NOP>
inoremap <Left>  <NOP>
noremap <Right> <NOP>
inoremap <Right> <NOP>
noremap <Up>    <NOP>
inoremap <Up>    <NOP>
noremap <Down>  <NOP>
inoremap <Down>  <NOP>

